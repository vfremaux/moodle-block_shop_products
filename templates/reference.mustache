{{!
    @template block_shop_products/reference

    Template for displaying product reference

    Classes required for JS:
    * none

    Context variables required for this template:
    * undocumented @see block's renderer for reference
}}
<!-- reference -->
<div class="product-reference">
    <div>
        <div class="cs-product-key">{{{referencestr}}}:</div>
        <div class="cs-product-value monospace"><div class="cs-product-reference">{{reference}}</div></div>
    </div>

    <div>
        <div class="cs-product-key">{{{startdatestr}}}:</div>
        <div class="cs-product-value">{{startdate}}</div>
    </div>

    <div>
        <div class="cs-product-key">{{{enddatestr}}}:</div>
        <div class="cs-product-value">{{enddate}}</div>
    </div>
</div>
<!-- /reference -->